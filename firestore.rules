rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // User Profiles
    // - Anyone can read a user's profile (for sharing cards).
    // - Only the owner of a profile can create or update it.
    // - No one can delete a user profile.
    match /users/{userId} {
      allow read;
      allow create, update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if false;

      // Contacts Subcollection
      // - A user can only manage their own contacts list.
      match /contacts/{contactId} {
        allow read, write, delete: if isSignedIn() && request.auth.uid == userId;
      }
    }
  }
}
