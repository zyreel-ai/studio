rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check for authentication
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Allow users to read, write, and delete files in their own folder.
    // The folder is named after their user ID. This is a secure way to
    // manage user-specific files like avatars.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
