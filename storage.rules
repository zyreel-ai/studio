rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read and write their own avatar images.
    // The image path must match the user's UID.
    match /avatars/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write their own card backgrounds.
    match /card-backgrounds/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other operations on all other files.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
