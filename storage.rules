rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for user avatar images
    match /avatars/{userId}/{fileName} {
      // Allow reading anyone's avatar, as they are public
      allow read;

      // Allow writing (uploading/updating/deleting) an avatar only if the user owns it
      // Also, check that the uploaded file is an image and is reasonably sized (e.g., < 5MB)
      allow write: if isOwner(userId)
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Rules for generated card backgrounds
    match /backgrounds/{userId}/{fileName} {
      // Allow reading anyone's card background
      allow read;
      
      // Allow writing only for the owner
      allow write: if isOwner(userId);
    }

    // Default deny all other operations on all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
